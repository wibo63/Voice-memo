<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voice Memo - Ideas & Actions</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            color: white;
            margin-bottom: 30px;
        }

        .header h1 {
            font-size: 2.5em;
            margin-bottom: 10px;
        }

        .header p {
            opacity: 0.9;
            font-size: 1.1em;
        }

        .record-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .record-controls {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 20px;
        }

        .record-button {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            border: none;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            font-size: 2em;
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .record-button:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(102, 126, 234, 0.6);
        }

        .record-button.recording {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            animation: pulse 1.5s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.1); }
        }

        .status {
            font-size: 1.2em;
            color: #666;
            font-weight: 500;
        }

        .status.recording {
            color: #f5576c;
        }

        .transcript {
            margin-top: 20px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
            min-height: 60px;
            color: #333;
            line-height: 1.6;
        }

        .transcript.empty {
            color: #999;
            font-style: italic;
        }

        .save-controls {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .category-select {
            flex: 1;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            font-size: 1em;
            background: white;
            cursor: pointer;
        }

        .save-button {
            padding: 12px 30px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            border-radius: 10px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .save-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }

        .save-button:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .tabs {
            display: flex;
            gap: 10px;
            margin-bottom: 20px;
        }

        .tab {
            flex: 1;
            padding: 15px;
            background: rgba(255,255,255,0.9);
            border: none;
            border-radius: 10px;
            font-size: 1em;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            color: #667eea;
        }

        .tab.active {
            background: white;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

        .memos-section {
            background: white;
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .memo-item {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 15px;
            border-left: 4px solid #667eea;
        }

        .memo-item.action {
            border-left-color: #f5576c;
        }

        .memo-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .memo-category {
            display: inline-block;
            padding: 5px 12px;
            background: #667eea;
            color: white;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 600;
        }

        .memo-category.action {
            background: #f5576c;
        }

        .memo-date {
            color: #999;
            font-size: 0.9em;
        }

        .memo-text {
            color: #333;
            line-height: 1.6;
            margin-bottom: 10px;
        }

        .memo-actions {
            display: flex;
            gap: 10px;
        }

        .delete-button {
            padding: 8px 16px;
            background: #ff6b6b;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 0.9em;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .delete-button:hover {
            background: #ff5252;
        }

        .empty-state {
            text-align: center;
            padding: 40px;
            color: #999;
        }

        .empty-state svg {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
            opacity: 0.3;
        }

        .browser-warning {
            background: #fff3cd;
            border: 2px solid #ffc107;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            color: #856404;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üé§ Voice Memo</h1>
            <p>Capture your ideas and actions instantly</p>
        </div>

        <div id="browserWarning" class="browser-warning" style="display: none;">
            ‚ö†Ô∏è Speech recognition requires a modern browser like Chrome, Edge, or Safari. Please make sure to allow microphone access.
        </div>

        <div class="record-section">
            <div class="record-controls">
                <button id="recordButton" class="record-button">üé§</button>
                <div id="status" class="status">Tap to start recording</div>
                <div id="transcript" class="transcript empty">Your words will appear here...</div>
                <div class="save-controls">
                    <select id="categorySelect" class="category-select">
                        <option value="idea">üí° Idea</option>
                        <option value="action">‚úì Action</option>
                    </select>
                    <button id="saveButton" class="save-button" disabled>Save Memo</button>
                </div>
            </div>
        </div>

        <div class="tabs">
            <button class="tab active" data-filter="all">All</button>
            <button class="tab" data-filter="idea">Ideas</button>
            <button class="tab" data-filter="action">Actions</button>
        </div>

        <div class="memos-section">
            <div id="memosList"></div>
        </div>
    </div>

    <script>
        // Speech Recognition Setup
        const SpeechRecognition = window.SpeechRecognition || window.webkitSpeechRecognition;
        
        if (!SpeechRecognition) {
            document.getElementById('browserWarning').style.display = 'block';
        }

        const recognition = SpeechRecognition ? new SpeechRecognition() : null;
        if (recognition) {
            recognition.continuous = true;
            recognition.interimResults = true;
            recognition.lang = 'en-US';
        }

        // State
        let isRecording = false;
        let currentTranscript = '';
        let memos = JSON.parse(localStorage.getItem('voiceMemos') || '[]');
        let currentFilter = 'all';

        // Elements
        const recordButton = document.getElementById('recordButton');
        const status = document.getElementById('status');
        const transcript = document.getElementById('transcript');
        const saveButton = document.getElementById('saveButton');
        const categorySelect = document.getElementById('categorySelect');
        const memosList = document.getElementById('memosList');

        // Event Listeners
        if (recognition) {
            recognition.onresult = (event) => {
                let interimTranscript = '';
                let finalTranscript = '';

                for (let i = event.resultIndex; i < event.results.length; i++) {
                    const transcriptText = event.results[i][0].transcript;
                    if (event.results[i].isFinal) {
                        finalTranscript += transcriptText + ' ';
                    } else {
                        interimTranscript += transcriptText;
                    }
                }

                currentTranscript += finalTranscript;
                const displayText = currentTranscript + interimTranscript;
                
                transcript.textContent = displayText || 'Listening...';
                transcript.classList.remove('empty');
                
                if (currentTranscript.trim()) {
                    saveButton.disabled = false;
                }
            };

            recognition.onerror = (event) => {
                console.error('Speech recognition error:', event.error);
                status.textContent = 'Error: ' + event.error;
                stopRecording();
            };

            recognition.onend = () => {
                if (isRecording) {
                    recognition.start();
                }
            };
        }

        recordButton.addEventListener('click', () => {
            if (!recognition) {
                alert('Speech recognition is not supported in your browser. Please use Chrome, Edge, or Safari.');
                return;
            }

            if (isRecording) {
                stopRecording();
            } else {
                startRecording();
            }
        });

        saveButton.addEventListener('click', saveMemo);

        document.querySelectorAll('.tab').forEach(tab => {
            tab.addEventListener('click', (e) => {
                document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
                e.target.classList.add('active');
                currentFilter = e.target.dataset.filter;
                renderMemos();
            });
        });

        // Functions
        function startRecording() {
            isRecording = true;
            currentTranscript = '';
            recognition.start();
            recordButton.classList.add('recording');
            status.classList.add('recording');
            status.textContent = 'Recording... (tap to stop)';
            transcript.textContent = 'Listening...';
            transcript.classList.remove('empty');
            saveButton.disabled = true;
        }

        function stopRecording() {
            isRecording = false;
            recognition.stop();
            recordButton.classList.remove('recording');
            status.classList.remove('recording');
            status.textContent = 'Tap to start recording';
            
            if (!currentTranscript.trim()) {
                transcript.textContent = 'Your words will appear here...';
                transcript.classList.add('empty');
            }
        }

        function saveMemo() {
            if (!currentTranscript.trim()) return;

            const memo = {
                id: Date.now(),
                text: currentTranscript.trim(),
                category: categorySelect.value,
                date: new Date().toISOString()
            };

            memos.unshift(memo);
            localStorage.setItem('voiceMemos', JSON.stringify(memos));

            currentTranscript = '';
            transcript.textContent = 'Your words will appear here...';
            transcript.classList.add('empty');
            saveButton.disabled = true;

            renderMemos();
        }

        function deleteMemo(id) {
            memos = memos.filter(m => m.id !== id);
            localStorage.setItem('voiceMemos', JSON.stringify(memos));
            renderMemos();
        }

        function renderMemos() {
            const filtered = currentFilter === 'all' 
                ? memos 
                : memos.filter(m => m.category === currentFilter);

            if (filtered.length === 0) {
                memosList.innerHTML = `
                    <div class="empty-state">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                            <path d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                        <p>No ${currentFilter === 'all' ? 'memos' : currentFilter + 's'} yet. Start recording!</p>
                    </div>
                `;
                return;
            }

            memosList.innerHTML = filtered.map(memo => `
                <div class="memo-item ${memo.category}">
                    <div class="memo-header">
                        <span class="memo-category ${memo.category}">
                            ${memo.category === 'idea' ? 'üí° Idea' : '‚úì Action'}
                        </span>
                        <span class="memo-date">${formatDate(memo.date)}</span>
                    </div>
                    <div class="memo-text">${memo.text}</div>
                    <div class="memo-actions">
                        <button class="delete-button" onclick="deleteMemo(${memo.id})">Delete</button>
                    </div>
                </div>
            `).join('');
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            const now = new Date();
            const diff = now - date;
            const minutes = Math.floor(diff / 60000);
            const hours = Math.floor(diff / 3600000);
            const days = Math.floor(diff / 86400000);

            if (minutes < 1) return 'Just now';
            if (minutes < 60) return `${minutes}m ago`;
            if (hours < 24) return `${hours}h ago`;
            if (days < 7) return `${days}d ago`;
            
            return date.toLocaleDateString();
        }

        // Make deleteMemo available globally
        window.deleteMemo = deleteMemo;

        // Initial render
        renderMemos();
    </script>
</body>
</html>
